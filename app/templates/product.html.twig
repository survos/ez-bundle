{# templates/admin/blank_page.html.twig #}
{% extends '@SurvosEz/layout_no_sidebar.html.twig' %}

{# Remove EA chrome + let content use full width #}
{#{% block body_class %}ea-content-width-full ea-sidebar-hidden ea-navbar-hidden{% endblock %}#}

{# Kill the chrome #}
{#{% block sidebar %}{% endblock %}#}
{#{% block header %}{% endblock %}#}

{% block content %}
    <div class="container-fluid px-3 px-md-4 py-3">
        <!-- Page header -->
        <div class="mb-3 d-flex align-items-center gap-2 flex-wrap">
            <a href="{{ path('admin_product_index') }}" class="link-secondary d-inline-flex align-items-center">
                {{ ux_icon('tabler:arrow-left') }}
                <span class="text-truncate">Back to Products</span>
            </a>
            <span class="vr d-none d-sm-inline mx-2"></span>
            <h1 class="page-title mb-0">{{ product.title|default('Product Details') }}</h1>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="ms-auto d-none d-md-flex align-items-center gap-2">
                    <a href="{{ path('app_product_edit', {'sku': product.sku}) }}" class="btn btn-primary">
                        {{ ux_icon('tabler:pencil', { class: 'me-1' }) }} Edit Product
                    </a>
                </div>
            {% endif %}
        </div>

        <!-- Mobile sticky actions -->
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mobile-actionbar d-md-none">
                <div class="d-grid">
                    <a href="{{ path('app_product_edit', {'sku': product.sku}) }}" class="btn btn-primary btn-lg">
                        {{ ux_icon('tabler:pencil') }} <span class="ms-1 fw-semibold">Edit Product</span>
                    </a>
                </div>
            </div>
        {% endif %}

        <!-- Main content -->
        <div class="row g-3 g-lg-4 align-items-start">
            <!-- Image / Gallery -->
            <div class="col-12 col-lg-5 order-0">
                <div class="card product-detail-card">
                    <div class="card-body p-0">
                        <div class="product-image-wrapper">
                            <div class="ratio ratio-4x3 ratio-md-16x9">
                                {% if product.imageUrl %}
                                    <img src="{{ product.imageUrl }}" alt="{{ product.title }}" class="product-image">
                                {% else %}
                                    <div class="d-flex align-items-center justify-content-center w-100 h-100">
                                        <div class="text-center">
                                            <div class="placeholder-icon">
                                                {{ ux_icon('tabler:photo') }}
                                            </div>
                                            <div class="small text-secondary">No image available</div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>

                            {% if product.stock is not null %}
                                {% set stockClass = product.stock > 10 ? 'text-bg-success' : (product.stock > 0 ? 'text-bg-warning' : 'text-bg-danger') %}
                                <span class="badge {{ stockClass }} stock-badge">
                {% if product.stock > 10 %}
                    {{ ux_icon('tabler:check', { class: 'me-1' }) }} In Stock ({{ product.stock }})
                {% elseif product.stock > 0 %}
                    {{ ux_icon('tabler:alert-triangle', { class: 'me-1' }) }} Low ({{ product.stock }})
                {% else %}
                    {{ ux_icon('tabler:x', { class: 'me-1' }) }} Out of Stock
                {% endif %}
              </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Details -->
            <div class="col-12 col-lg-7 order-1">
                <div class="card product-detail-card mb-3">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h2 class="card-title h5 mb-0">Product Information</h2>
                        {% if product.category %}
                            <span class="badge text-bg-primary">{{ product.category }}</span>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap align-items-center gap-2 text-muted mb-3">
                            {{ ux_icon('tabler:barcode') }}
                            <span class="small">SKU:</span>
                            <span class="fw-semibold font-monospace">{{ product.sku }}</span>
                        </div>

                        {% if product.title %}
                            <h3 class="h4 mb-3">{{ product.title }}</h3>
                        {% endif %}

                        {% if product.description %}
                            <div>
                                <h4 class="h6 text-uppercase text-secondary mb-2">Description</h4>
                                <p class="mb-0">{{ product.description }}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Additional details -->
                <div class="card product-detail-card">
                    <div class="card-header">
                        <h2 class="card-title h5 mb-0">Details</h2>
                    </div>

                    <div class="card-body">
                        <div class="row row-cols-1 row-cols-sm-2 g-3">
                            <div class="col">
                                <div class="info-item h-100">
                                    <div class="d-flex align-items-center mb-2">
                                        {{ ux_icon('tabler:box', { class: 'me-2' }) }}
                                        <span class="kv">Category</span>
                                    </div>
                                    <div class="fw-semibold">{{ product.category ?: 'â€”' }}</div>
                                </div>
                            </div>

                            <div class="col">
                                <div class="info-item h-100">
                                    <div class="d-flex align-items-center mb-2">
                                        {{ ux_icon('tabler:hash', { class: 'me-2' }) }}
                                        <span class="kv">SKU</span>
                                    </div>
                                    <div class="fw-semibold font-monospace">{{ product.sku }}</div>
                                </div>
                            </div>

                            <div class="col">
                                <div class="info-item h-100">
                                    <div class="d-flex align-items-center mb-2">
                                        {{ ux_icon('tabler:database', { class: 'me-2' }) }}
                                        <span class="kv">Stock Level</span>
                                    </div>
                                    <div class="fw-semibold">
                                        {% if product.stock is not null %}
                                            {{ product.stock }} <span class="text-secondary fw-normal">units</span>
                                        {% else %}
                                            <span class="text-secondary">Not tracked</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            {# Example extension blocks if you later add price/brand/etc. #}
                            {#
                            <div class="col">
                              <div class="info-item h-100">
                                <div class="d-flex align-items-center mb-2">
                                  {{ ux_icon('tabler:currency-dollar', { class: 'me-2' }) }}
                                  <span class="kv">Price</span>
                                </div>
                                <div class="fw-semibold">{{ product.price|currency('USD') }}</div>
                              </div>
                            </div>
                            #}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* --- Mobile-first polish --- */
        .product-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: .75rem;
            overflow: hidden;
        }

        .product-image-wrapper {
            position: relative;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-radius: .75rem;
            overflow: hidden;
        }
        /* Use Bootstrap's ratio for intrinsic sizing; this just ensures the image covers */
        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .placeholder-icon {
            opacity: .12;
            font-size: 4rem;
        }

        .stock-badge {
            position: absolute;
            top: .75rem;
            right: .75rem;
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            font-weight: 600;
            padding: .35rem .65rem;
            border-radius: .5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, .12);
        }

        .product-detail-card {
            border: none;
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.06);
            border-radius: .75rem;
        }

        .info-item {
            padding: 1rem;
            border-radius: .5rem;
            background: var(--bs-body-bg);
            transition: transform .2s ease, background-color .2s ease;
        }
        .info-item:hover { transform: translateY(-2px); background: var(--bs-light); }

        .kv {
            font-size: .8125rem;
            color: var(--bs-secondary-color);
            margin-bottom: .25rem;
        }

        /* Sticky mobile action bar */
        .mobile-actionbar {
            position: sticky;
            bottom: 0;
            z-index: 1030;
            background: color-mix(in srgb, var(--bs-body-bg) 92%, transparent);
            border-top: 1px solid var(--bs-border-color);
            padding: .75rem;
            backdrop-filter: saturate(140%) blur(10px);
            -webkit-backdrop-filter: saturate(140%) blur(10px);
        }

        /* Compact the header on narrow screens */
        @media (max-width: 575.98px) {
            .page-title { font-size: 1.25rem; }
        }
    </style>
{% endblock %}
